		<activity android:name=".LekciiActivity"
    		android:label="@string/lekcii_title">
			<category android:name="android.intent.category.DEFAULT" />
		</activity>
		<activity android:name=".StatistActivity"
    		android:label="@string/statist_title">
		</activity>
		<activity android:name=".RegActivity"
		    android:windowSoftInputMode="adjustPan"
    		android:label="@string/reg_title">
		</activity>
		<activity android:name=".TestsActivity"
    		android:label="@string/tests_title">
		</activity>
		<activity android:name=".PDFShow"
			android:label="@string/PDF">
		</activity>
		<activity android:name=".OfflineActivity"
			android:label="@string/tests_title">
		</activity>
		<activity android:name=".TestActivity"
    		android:label="@string/test_title">
		</activity>
		<activity android:name=".TTestActivity"
			android:label="@string/test_title">
		</activity>
		<activity android:name=".SettingsActivity"
    		android:label="@string/settings_title">
		</activity>
    </application>

</manifest>
